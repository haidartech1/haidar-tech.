  <!-- custom cursor elements -->
  <div id="cursor" class="cursor" aria-hidden="true"></div>
  <div id="ring" class="cursor-ring" aria-hidden="true"></div>

  <script>
    // Custom cursor script (single-file, no libraries)
    const cursor = document.getElementById('cursor');
    const ring = document.getElementById('ring');
    let mouseX = window.innerWidth/2, mouseY = window.innerHeight/2;
    let ringX = mouseX, ringY = mouseY;

    document.addEventListener('mousemove', e => {
      mouseX = e.clientX;
      mouseY = e.clientY;
      cursor.style.transform = `translate(${mouseX}px, ${mouseY}px) translate(-50%,-50%)`;
      // ring follows with lag
      ringX += (mouseX - ringX) * 0.16;
      ringY += (mouseY - ringY) * 0.16;
      ring.style.transform = `translate(${ringX}px, ${ringY}px) translate(-50%,-50%)`;
    });

    // interactive hover states
    const interactives = document.querySelectorAll('a,button,input,textarea,.service');
    interactives.forEach(el => {
      el.addEventListener('mouseenter', () => {
        cursor.classList.add('big');
        ring.style.opacity = '0.18';
      });
      el.addEventListener('mouseleave', () => {
        cursor.classList.remove('big');
        ring.style.opacity = '1';
      });
    });

    // idle subtle state
    let lastMove = Date.now();
    document.addEventListener('mousemove', () => lastMove = Date.now());
    setInterval(() => {
      if (Date.now() - lastMove > 2500) {
        cursor.classList.add('small');
        ring.style.opacity = '0.06';
      } else {
        cursor.classList.remove('small');
        ring.style.opacity = '1';
      }
    }, 700);

    // accessibility: allow keyboard focus outlines for tab users
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Tab') {
        document.body.style.cursor = 'auto'; // show native cursor for keyboard users
      }
    });
  </script>
